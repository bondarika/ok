@import '@/styles/variables'
.button
    display flex
    align-items center
    justify-content center
    overflow hidden
    border none
    position: relative
    overflow: hidden
    transition: transform 500ms cubic-bezier(0, -0.3, 0.5, 1.3)

    &_primary
        background-color $orange
        color $white
    &_secondary
        background-color $brown
        color $grey
    &:disabled 
        opacity 0.36
        pointer-events none
    &:hover
        &::before
            content: ""
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            background: currentColor
            opacity: 0.12
            pointer-events: none

        .content_group
            transform: scale(1.05)
            transition: transform 500ms cubic-bezier(0, -0.3, 0.5, 1.3)

.progressIndicator
  width: 16px
  height: 16px
  border: 2px solid rgba(255, 255, 255, 0.3)
  border-top-color: $white
  border-radius: 50%
  animation: spin 500ms cubic-bezier(0, -0.3, 0.5, 1.3) infinite

@keyframes spin
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)


.shimmer
  position: absolute
  top: 0
  left: -33%
  width: 33%
  height: 100%
  background: rgba(255, 255, 255, 0.12)
  animation: shimmerMove 1000ms linear infinite

@keyframes shimmerMove
  from
    left: -33%
  to
    left: 100%

